<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NetModular.Lib.Cache.MemoryCache" Version="1.7.0" />
    <PackageReference Include="NetModular.Lib.Data.MySql" Version="1.7.0" />
    <PackageReference Include="NetModular.Lib.Data.SQLite" Version="1.7.0" />
    <PackageReference Include="NetModular.Lib.Data.SqlServer" Version="1.7.0" />
    <PackageReference Include="NetModular.Lib.Excel.EPPlus" Version="1.7.0" />
    <PackageReference Include="NetModular.Lib.Host.Web" Version="1.7.0" />
    <PackageReference Include="NetModular.Module.Admin.Web" Version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Web\Web.csproj" />
  </ItemGroup>

  <Import Project="..\..\build\module.build.targets" />

  <ItemGroup>
    <!--复制配置文件到输出目录-->
    <None Update="config\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <!--复制模块相关文件到输出路径中-->
    <None Update="_modules\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
